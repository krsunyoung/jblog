<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="blog">

	<insert id="create" parameterType="Long">
		
		<![CDATA[
		insert INTO Blog VALUES (#{no }, '블로그명','logo.jpg')
		]]>
	</insert>
	
	<insert id="imagaeupdate" parameterType="string">
		<![CDATA[
		update blog set LOGO=#{logo}
		]]>
	</insert>
	
	<insert id="nameupdate" parameterType="blogvo">
		<![CDATA[
		update blog set name=#{name}
		]]>
	</insert>
	
</mapper>

